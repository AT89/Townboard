<h1> Create a new post</h1>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :value%>
  <%= f.text_field :value %>
  <br>
  <%= f.label :description %>
<br>

<textarea name="post[description]" cols="80" rows="20"><%= @post.description %></textarea>

<br>
<%= f.label :image_URL%>
<%= f.text_field :image %>

<br>
<br>
  <%= f.submit %>
  <% end %>

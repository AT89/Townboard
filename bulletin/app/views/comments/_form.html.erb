<%= form_for [@board, @post, @comment] do |f| %>

  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :image_URL %>
  <%= f.text_field :image %>
<br>
<br>
  <%= f.label :comment %>
<br>

<textarea name="comment[description]" cols="80" rows="20"><%= @comment.description %></textarea>

<br>
<br>
  <%= f.submit %>
  <% end %>
